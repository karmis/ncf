{% extends "BrainstrapCoreNCUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

<div class="loginWrapper">

	<!-- Current user form -->
	<form action="{{ path("fos_user_security_check") }}" method="post" id="login">
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
		<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />        
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}" />      
        <input type="password" id="password" name="_password" required="required" class="loginPassword" placeholder="Пароль" />
        
        <div class="logControl">
            <div class="memory">
            	<input type="checkbox" id="remember_me" name="_remember_me" value="on" checked="checked" class="check"/>
            	<label for="remember1">{{ 'security.login.remember_me'|trans }}</label></div>
            <input type="submit" name="submit" value="Login" class="buttonM bBlue" />
            <div class="clear"></div>
        </div>
    
    </form>
</div>
{% endblock fos_user_content %}
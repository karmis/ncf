{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cart\Cart list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Keyword</th>
                <th>Registrationdate</th>
                <th>Expiresdate</th>
                <th>Locked</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cart_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.keyword }}</td>
                <td>{% if entity.registrationDate %}{{ entity.registrationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.expiresDate %}{{ entity.expiresDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.locked }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cart_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cart_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('cart_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

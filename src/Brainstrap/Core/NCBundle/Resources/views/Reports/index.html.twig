{% extends "BrainstrapCoreNCBundle::layout.html.twig" %}

{% block content %}
<div id="content">
    {% block contentTop %}
    <div class="contentTop">
        <span class="pageTitle">
        <span class="icon-screen"></span>
        Отчеты
        </span>
        <ul class="quickStats list-unstyled" id="totalCountInfoBlock">
            <li>
                <a href="" class="blueImg">
                <img src="{{ asset('bundles/brainstrapcorenc/images/icons/quickstats/plus.png')}}" alt="" />
                </a>
                <div class="floatR">
                    <strong class="blue" nc-type='field' nc-field='sessionsCount'>0</strong>
                    <span>Сессий</span>
                </div>
            </li>
            <li>
                <a href="" class="redImg">
                <img src="{{ asset('bundles/brainstrapcorenc/images/icons/quickstats/user.png')}}" alt="" />
                </a>
                <div class="floatR">
                    <strong class="blue" nc-type='field' nc-field='clientsCount'>0</strong>
                    <span>Клиентов</span>
                </div>
            </li>
            <li>
                <a href="" class="greenImg">
                <img src="{{ asset('bundles/brainstrapcorenc/images/icons/quickstats/money.png')}}" alt="" />
                </a>
                <div class="floatR">
                    <strong class="blue" nc-type='field' nc-field='moneyCount'>0</strong>
                    <span>Денег в кассе</span>
                </div>
            </li>
        </ul>
        <div class="clear"></div>
    </div>
    {% endblock contentTop %}

    {% block breadLine %}
    <!-- Breadcrumbs line -->
    <div class="breadLine"></div>
    {% endblock breadLine %}


    {% block wrapper %}
    <!-- Main content -->
    <div class="wrapper">

        <div class="fluid">
            <div class="widget">
                <div class="whead"><h6>Активные сессии</h6><div class="clear"></div></div>
                <div id="dyn2" class="shownpars">
                    <a class="tOptions act" title="Options"><i class="fa fa-wrench fa-5"></i></a>
                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover" nc-interface-unit="data-table-sessions" width="100%">
                        <thead>
                            <tr>
                                <th width="15%">Код карты</th>
                                <th width="15%">Тип карты</th>
                                <th width="15%">Имя клиента</th>
                                <th width="15%">Дата создания сессии</th>
                                <th width="15%">Управление</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>


    </div>
    {% endblock wrapper %}

{% endblock content %}